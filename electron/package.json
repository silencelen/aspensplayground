{
  "name": "aspens-playground",
  "version": "1.0.0",
  "description": "Survive waves of zombies in this intense 3D multiplayer shooter. Features weapon upgrades, character cosmetics, co-op multiplayer, and global leaderboards.",
  "main": "main.js",
  "author": {
    "name": "Aspen's Playground",
    "email": "contact@aspensplayground.com"
  },
  "homepage": "https://aspensplayground.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silencelen/aspensplayground-core.git"
  },
  "keywords": [
    "zombie",
    "shooter",
    "game",
    "3D",
    "multiplayer",
    "survival",
    "horror"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "icons": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "appId": "com.aspensplayground.game",
    "productName": "Aspens Playground",
    "copyright": "Copyright Â© 2024 Aspen's Playground",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "../index.html",
      "../game.js",
      "../service-worker.js",
      "../modules/**/*",
      "../maps/**/*",
      "../privacy.html",
      "../terms.html",
      "../og-image.png",
      "../manifest.json"
    ],
    "extraResources": [
      {
        "from": "../maps",
        "to": "maps"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "publisherName": "Aspen's Playground",
      "legalTrademarks": "Aspen's Playground",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.games",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icons",
      "category": "Game",
      "synopsis": "Zombie survival shooter game",
      "description": "Survive waves of zombies in this intense 3D multiplayer shooter. Features weapon upgrades, character cosmetics, co-op multiplayer, and global leaderboards.",
      "desktop": {
        "Name": "Aspen's Playground",
        "Comment": "Zombie Survival Shooter",
        "Categories": "Game;ActionGame;",
        "Keywords": "zombie;shooter;survival;multiplayer;",
        "StartupWMClass": "aspens-playground"
      }
    },
    "dmg": {
      "background": "resources/dmg-background.png",
      "iconSize": 128,
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aspen's Playground",
      "license": "resources/license.txt",
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "silencelen",
      "repo": "aspensplayground-core",
      "releaseType": "release"
    }
  }
}
